body, html
    border 0
    margin 0
    padding 0

body
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-color black
    font-family Helvetica, 'Helvetica Neue', Arial, sans-serif

#map-viewer
    position absolute
    top 0
    left 0
    right 40%
    bottom 0
    padding 0
    margin 0

#ol-map
    width 100%
    height 100%

#map-info-bar
    position absolute
    bottom 0
    left 20%
    right 20%
    height auto
    background-color #ededea
    overflow: hidden
    padding: .5em 1em
    font-size 0.8em
    box-shadow 0 -1px 5px 2px rgba(0,0,0,0.5)

#map-info-bar a
    color #0f495a
    text-decoration none

#form-viewer
    position absolute
    top 0
    left 60%
    right 0
    bottom 0
    padding 0
    margin 0

#form-frame
    padding 0
    margin 0
    height 100%
    width 100%
